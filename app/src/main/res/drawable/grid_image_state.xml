<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <!-- Define the drawable for selected state -->
        <shape android:shape="rectangle" >
            <corners android:radius="10dp" />
            <stroke
                android:width="4dp"
                android:color="#ff9fd808" />

        </shape>
    </item>
    <item>
        <!-- Define the drawable for normal state -->
        <shape android:shape="rectangle" >
            <corners android:radius="10dp" />
            <stroke
                android:width="4dp"
                android:color="#ffff827a" />
        </shape>
    </item>
</selector>